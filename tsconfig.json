{
    "include": [
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "lib": [
            "ES2022",
            "DOM"
        ],
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "declaration": true,
        "outDir": "./dist/types",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}